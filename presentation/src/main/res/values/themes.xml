<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smiley" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_normal</item>
        <item name="colorPrimaryVariant">@color/primary_normal</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black1_20</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorControlActivated">@color/primary_normal</item>
        <item name="colorControlNormal">@color/gray3_8E</item>
        <item name="android:textCursorDrawable">@color/black1_20</item>
        <item name="android:textColorHighlight">@color/light_blue1</item>
    </style>

    <!-- Splash 화면 테마 -->
    <style name="Theme.Smiley.Splash">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
        <item name="behavior_peekHeight">270dp</item>
    </style>

    <style name="tab_item_text"
        parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/selector_tab_layout_item_text</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="tab_small_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Seekbar (색상 primary normal) -->
    <style name="custom_seekbar_primary_normal" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/seekbar_circle_thumb_primary_normal</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>

    <!-- Seekbar (색상 primary dark) -->
    <style name="custom_seekbar_primary_dark" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/seekbar_circle_thumb_primary_dark</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>

    <!-- Seekbar (색상 primary purple) -->
    <style name="custom_seekbar_purple" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/seekbar_circle_thumb_purple</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>

</resources>