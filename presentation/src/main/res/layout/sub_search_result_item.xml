<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_medicine_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/search_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_semibold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6sp"

            android:textColor="@color/gray3_82"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/search_result_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_semibold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6sp"

            android:textColor="@color/gray4_AC"
            android:textSize="@dimen/H6_SB600_16_h22"
            android:maxLines="1"
            />
    </LinearLayout>
</layout>