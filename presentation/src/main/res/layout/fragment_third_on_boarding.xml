<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.fragment.FirstOnBoardingFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/onboarding_title3"
        android:textColor="@color/black1_20"
        android:textSize="@dimen/SB600_24_auto"
        android:lineSpacingExtra="5sp"
        android:includeFontPadding="false"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"

        android:gravity="center"
        android:text="@string/onboarding_content3"
        android:textColor="@color/gray2_5E"
        android:textSize="@dimen/H4_R400_15_h22"
        android:fontFamily="@font/pretendard_regular"
        android:lineSpacingExtra="6sp"
        android:includeFontPadding="false"

        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivIllust"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"

        android:adjustViewBounds="true"
        android:background="@drawable/img_on_boarding_3"

        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>