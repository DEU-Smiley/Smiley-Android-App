<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_day_cell_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tv_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"

        android:text="ìˆ˜"
        android:textSize="@dimen/H4_SB600_14_h18"
        android:textColor="@color/gray2_5E"
        android:fontFamily="@font/pretendard_bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="bottom"

        android:text="15"
        android:textSize="@dimen/B700_16_auto"
        android:textColor="@color/gray2_5E"
        android:fontFamily="@font/pretendard_bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_day_of_week"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <View
            android:id="@+id/view_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#DAECFF" />

        <View
            android:id="@+id/view_dot_2"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#B6DAFF" />

        <View
            android:id="@+id/view_dot_3"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#6CB6FF" />
        <View
            android:id="@+id/view_dot_4"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#1781EA" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>