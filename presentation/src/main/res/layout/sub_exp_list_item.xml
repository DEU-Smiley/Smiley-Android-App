<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/exp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:text="일일 착용 시간"
        android:textSize="@dimen/M500_14_h20"
        android:textColor="@color/black1_20"
        android:fontFamily="@font/pretendard_medium"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"

        android:text="+ 80,330 exp"
        android:textSize="@dimen/M500_14_h20"
        android:textColor="@color/gray3_8E"
        android:fontFamily="@font/pretendard_medium"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/exp_title"
        app:layout_constraintBottom_toBottomOf="@id/exp_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>