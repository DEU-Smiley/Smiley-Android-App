<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_day_cell_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tvDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="ì¼"
        android:textSize="@dimen/H4_SB600_14_h18"
        android:textColor="@color/black1_20"
        android:fontFamily="@font/pretendard_semibold"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvDay"
        />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="15"
        android:textSize="@dimen/R400_17_auto"
        android:textColor="@color/gray5_CB"
        android:fontFamily="@font/pretendard_regular"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDayOfWeek"
        app:layout_constraintBottom_toTopOf="@id/ll_dot_layout"/>

    <LinearLayout
        android:id="@+id/ll_dot_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_marginVertical="5dp"

        app:layout_constraintTop_toBottomOf="@id/tvDay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:id="@+id/view_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#DAECFF" />

        <View
            android:id="@+id/view_dot_2"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#B6DAFF" />

        <View
            android:id="@+id/view_dot_3"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#6CB6FF" />
        <View
            android:id="@+id/view_dot_4"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/bg_rounded_corner_radius_15"
            android:backgroundTint="#1781EA" />
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>