<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/ic_exp_type"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/primary_normal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/exp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"

        android:text="착용 시간 34%"
        android:textSize="@dimen/B4_M500_13_h18"
        android:textColor="@color/gray2_5E"
        android:fontFamily="@font/pretendard_medium"

        app:layout_constraintLeft_toRightOf="@id/ic_exp_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>